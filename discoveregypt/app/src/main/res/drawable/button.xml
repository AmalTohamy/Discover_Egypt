        android:angle="45"
        android:centerX="35%"
        android:centerColor="#3399ff"
        android:startColor="#2570BA"
        android:endColor="#3539BD"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
